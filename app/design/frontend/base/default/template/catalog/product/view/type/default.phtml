<?php /* @var $this Mage_Catalog_Block_Product_View_Abstract */?>
<?php $_product = $this->getProduct() ?>

<?php if ($_product->isAvailable()): ?>
    <p class="availability in-stock"><?php echo $this->__('Наличие:') ?> <span style="color: green;"><?php echo $this->__('На складе') ?></span></p>
<?php else: ?>
    <p class="availability out-of-stock"><?php echo $this->__('Наличие:') ?> <span style="color: red;"><?php echo $this->__('Нет на складе') ?></span></p>
<?php endif; ?>
<?php
if ($_product->getAcolor()) {
    echo 'Цвет: ',$_product->getAcolor();
}
if ($_product->getAsize()) {
    echo '<br />Размер: ',$_product->getAsize();
}
if ($_product->getTypeprefix()) {
    echo '<br />Продукт: ',$_product->getTypeprefix();
}
if ($_product->getModel()) {
    echo '<br />Модель: ',$_product->getModel();
}
if ($_product->getGender()) {
    if ($_product->getGender() == 'Жен') {
        $gender = 'Женский';
    } else {
        $gender = $_product->getGender();
    }
    echo '<br />Пол: ',$gender;
}
if ($_product->getMaterial()) {
    $material = preg_replace('/\%/', '% ', $_product->getMaterial());
    $material = preg_replace('/\//', '', $material);
    $material = preg_replace('/([^0-9]+)([0-9]+)/', '$1, $2', $material);
    echo '<br />Материал: ',$material;
}
if ($_product->getVendor()) {
    echo '<br />Бренд: ',$_product->getVendor();
}
//print_r($_product);

?>
<?php echo $this->getChildHtml('product_type_data_extra') ?>
<?php echo $this->getPriceHtml($_product) ?>
